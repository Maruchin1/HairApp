<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/label_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_round_info_24"
        android:tint="@color/text_color_tertiary"
        app:layout_constraintBottom_toBottomOf="@id/label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/label" />

    <TextView
        android:id="@+id/label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="TytuÅ‚"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:textColor="@color/text_color_tertiary"
        app:layout_constraintBottom_toBottomOf="@id/edit_button"
        app:layout_constraintEnd_toStartOf="@id/edit_button"
        app:layout_constraintStart_toEndOf="@id/label_icon"
        app:layout_constraintTop_toTopOf="@id/edit_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/edit_button"
        style="@style/Button.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edytuj"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        android:alpha="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>