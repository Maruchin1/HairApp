<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="32dp"
    android:paddingBottom="128dp">

    <com.example.product_details.views.SectionHeaderView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sectionIcon="@drawable/ic_round_category_24"
        app:sectionTitle="@string/composition_of_ingredients" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/ingredients_choice_chip_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:singleSelection="false">

        <com.google.android.material.chip.Chip
            android:id="@+id/proteins_choice_chip"
            style="@style/Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/proteins"
            app:chipBackgroundColor="@color/chip_protein_bg"
            app:chipStrokeColor="@color/color_proteins" />

        <com.google.android.material.chip.Chip
            android:id="@+id/emollients_choice_chip"
            style="@style/Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emollients"
            app:chipBackgroundColor="@color/chip_emollient_bg"
            app:chipStrokeColor="@color/color_emollients" />

        <com.google.android.material.chip.Chip
            android:id="@+id/humectants_choice_chip"
            style="@style/Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/humectants"
            app:chipBackgroundColor="@color/chip_humectant_bg"
            app:chipStrokeColor="@color/color_humectants" />
    </com.google.android.material.chip.ChipGroup>

    <include
        android:id="@+id/no_ingredients"
        layout="@layout/view_no_content_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/ingredients_chip_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/proteins_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/proteins"
            app:chipBackgroundColor="@color/color_proteins" />

        <com.google.android.material.chip.Chip
            android:id="@+id/emollients_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emollients"
            app:chipBackgroundColor="@color/color_emollients" />

        <com.google.android.material.chip.Chip
            android:id="@+id/humectants_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/humectants"
            app:chipBackgroundColor="@color/color_humectants" />
    </com.google.android.material.chip.ChipGroup>

</LinearLayout>