<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button.Primary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">8dp</item>
        <item name="iconPadding">8dp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="iconTint">@color/color_white</item>
    </style>

    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/color_primary</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="iconTint">@color/color_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="iconPadding">8dp</item>
    </style>

    <style name="Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Button.Text.Dark" parent="Button.Text">
        <item name="android:textColor">@color/color_white</item>
        <item name="iconTint">@color/color_white</item>
    </style>

    <style name="Button.Primary.Dark" parent="Button.Primary">
        <item name="backgroundTint">@color/color_white</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="iconTint">@color/color_primary</item>
    </style>

    <style name="Button.Secondary.Dark" parent="Button.Secondary">
        <item name="strokeColor">@color/color_white</item>
        <item name="iconTint">@color/color_white</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="rippleColor">@color/color_white</item>
    </style>

</resources>