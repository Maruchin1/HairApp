<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeOverlay</item>
        <item name="backgroundTint">@color/color_primary</item>
        <item name="tint">@color/color_white</item>
    </style>

    <style name="ExtendedFloatingActionButon" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeOverlay</item>
        <item name="backgroundTint">@color/color_primary</item>
        <item name="iconTint">@color/color_white</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="FabShapeOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>