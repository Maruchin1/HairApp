<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_white</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="android:colorBackground">@color/color_background</item>
        <item name="materialButtonStyle">@style/Widget.App.Button.Primary</item>
        <item name="materialCardViewStyle">@style/Widget.App.Card</item>
        <item name="chipStyle">@style/Widget.App.Chip.Choice</item>
        <item name="textInputStyle">@style/Widget.App.TextInput</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.Fab</item>
        <item name="extendedFloatingActionButtonStyle">@style/Widget.App.ExtendedFab</item>
        <item name="toolbarNavigationButtonStyle">@style/Widget.App.ToolbarButton</item>

    </style>

    <style name="ThemeOverlay.App.EditText" parent="">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlActivated">@color/color_primary</item>
    </style>

    <style name="Theme.App.Dialog.FullScreen" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/color_black</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/enter_slide_up</item>
        <item name="android:windowExitAnimation">@anim/exit_slide_down</item>
    </style>

    <style name="Widget.App.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="Widget.App.Card.Dark" parent="Widget.App.Card">
        <item name="cardBackgroundColor">@color/color_primary_light</item>
    </style>

    <style name="Widget.App.TextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="startIconTint">@color/text_color_primary</item>
        <item name="backgroundTint">@color/color_white</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxBackgroundColor">@color/color_primary_light</item>
    </style>

    <style name="Widget.App.TextInput.Exposed" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="startIconTint">@color/text_color_primary</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxBackgroundColor">@color/color_primary_light</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/color_primary_dark</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="chipCornerRadius">8dp</item>
    </style>

    <style name="Widget.App.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_bg</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="chipCornerRadius">8dp</item>
    </style>

    <style name="Widget.App.Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/ShapeOverlay.Fab</item>
        <item name="backgroundTint">@color/color_primary</item>
        <item name="tint">@color/color_white</item>
    </style>

    <style name="Widget.App.ExtendedFab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/ShapeOverlay.Fab</item>
        <item name="backgroundTint">@color/color_primary_dark</item>
        <item name="iconTint">@color/color_white</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="ShapeOverlay.Fab" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.ToolbarTitle</item>
    </style>

    <style name="Widget.App.Toolbar.Dark" parent="Widget.MaterialComponents.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar.Dark</item>
    </style>

    <style name="TextAppearance.App.ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_primary_light</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/color_white</item>
        <item name="toolbarNavigationButtonStyle">@style/Widget.App.ToolbarButton</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar.Dark" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/color_transparent</item>
        <item name="colorPrimaryVariant">@color/color_transparent</item>
        <item name="toolbarNavigationButtonStyle">@style/Widget.App.ToolbarButton.Dark</item>
    </style>

    <style name="Widget.App.ToolbarButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/text_color_primary</item>
    </style>

    <style name="Widget.App.ToolbarButton.Dark" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/color_white</item>
    </style>

    <style name="Widget.App.Button.Primary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">8dp</item>
        <item name="iconPadding">8dp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="iconTint">@color/color_white</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/color_primary</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="iconTint">@color/color_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="iconPadding">8dp</item>
    </style>

    <style name="Widget.App.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">8dp</item>
    </style>

    <style name="Widget.App.Button.Text.Dark" parent="Widget.App.Button.Text">
        <item name="android:textColor">@color/color_white</item>
        <item name="iconTint">@color/color_white</item>
    </style>

    <style name="Widget.App.Button.Primary.Dark" parent="Widget.App.Button.Primary">
        <item name="backgroundTint">@color/color_white</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="iconTint">@color/color_primary</item>
    </style>

    <style name="Widget.App.Button.Secondary.Dark" parent="Widget.App.Button.Secondary">
        <item name="strokeColor">@color/color_white</item>
        <item name="iconTint">@color/color_white</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="rippleColor">@color/color_white</item>
    </style>

    <style name="TextAppearance.App.SectionTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.PageTitle" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/text_color_primary_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.PageSubtitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_color_primary_dark</item>
    </style>

    <style name="TextAppearance.App.BodyPrimary" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="TextAppearance.App.BodySecondary" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="TextAppearance.App.BodySecondary.Dark" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="TextAppearance.App.BodyTertiary" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_color_tertiary</item>
    </style>

    <style name="TextAppearance.App.BigValue" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="TextAppearance.App.BigValue.Dark" parent="TextAppearance.App.BigValue">
        <item name="android:textColor">@color/color_white</item>
    </style>

</resources>