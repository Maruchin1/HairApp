<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/view_no_content_icon"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:alpha="0.5"
        android:src="@drawable/ic_outline_shopping_basket_24"
        app:layout_constraintBottom_toTopOf="@id/view_no_content_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintVertical_chainStyle="packed"
        app:tint="@color/color_primary_light" />

    <TextView
        android:id="@+id/view_no_content_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="8dp"
        android:alpha="0.5"
        android:text="@string/no_products"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/color_primary_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_no_content_icon" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/view_no_content_action"
        style="@style/Widget.App.Button.Secondary.Dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:alpha="0.5"
        android:text="@string/add"
        app:icon="@drawable/ic_round_add_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_no_content_title" />

</androidx.constraintlayout.widget.ConstraintLayout>